head
	title STEPS WITH FRIENDS
	link(href='index.css', rel='stylesheet')
	script(src='index.js', type='text/javascript')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	link(href='https://fonts.googleapis.com/css?family=Oswald', rel='stylesheet')
	p#createdBy Group 4
	#navbar.centerVertical.shadedBox
		#leftnav.centerVertical
			a.spaced(href='/')
				h2 STEPS WITH FRIENDS
			form.spaced(onsubmit='search(); return false')
				input#searchFields.spaced(type='text' placeholder='Search users...')
				input(type='submit' value='Search')
		#userBox.centerVertical
			if user
				a.spaced(onclick='showPendingRequests(); return false') Requests
				a.spaced(onclick='goToMyProfile(); return false')
					img(title='My Profile' alt='My Profile')
				a.spaced(href='/settings') Settings
				a.spaced(href='/logout') Logout
			else
				a.spaced(href='/login') Login
				div or
				a.spaced(href='/create-account') Create an Account